<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Cryptocurrency Prices</title>

    <link rel="stylesheet" href="/stylesheets/pure-min.css">
    <link rel="stylesheet" href="/stylesheets/fonts.css">
    <link rel="stylesheet" href="/stylesheets/book_viewer.css">
</head>

<body>

  <div id="layout">
      <a href="#menu" id="menuLink" class="menu-link">
          <span></span>
      </a>

      <!-- LHS Menu -->

      <div id="menu">
          <div class="pure-menu">
              <a class="pure-menu-heading" href="/">Cryptocurrenies</a>

              <form action="/search" method="get">
                <label>
                  <input type="text" name="search_coin", value="<%= params[:search_coin]%>"/>
                </label>
                <input type="submit" value="search"/>
              </form>

              <h3>
                <a href="/favorites">Favorites</a>
              </h3>

              <ul class="pure-menu-list">
                <% @markets.each do |market| %>             
                  <li class="pure-menu-item">
                    <a href="/market/<%= market %>" class="pure-menu-link"> 
                      <%= format_ticker(market) %>
                    </a>
                  </li>
                <% end %>
              </ul>
          </div>
      </div>

      <!-- HEADER -->

      <div id="main">
        <div class="header">
          <h1>Cryptocurrency</h1>
        </div>

        <!-- Content -->

        <div class="content">
          <%= yield %>
        </div>

      </div>
  </div>

  <script type="text/javascript" src="/javascripts/ui.js"></script>
</body>
</html>
